<div id="package-data">
    <div>
        <section id="data-summary">
            <div class="data-summary-border">
                <span>Dataset Summary:</span>
                <span id="total-patients">N/A# Patients</span>
                <span id="total-variables">N/A# Variables</span>
                <span id="estimated-data-points">N/A# Estimated Data Points</span>
            </div>
        </section>
        <section>
            <span class="circle-border">1</span>
            <div>
                <h4 class="dataset-builder-header">Select Additional Data &amp; Finalize Dataset</h4>
                <div class="soft-border">
                    <div>
                        <b>Select additional variables</b> you would like to be included in your filtered cohort dataset.
                    </div>
                    <div id="concept-tree"></div>
                </div>
            </div>
        </section>
        <section id="finalize-button-container" class="package-button-container">
            <button id="finalize-btn" class="btn btn-outline primary hidden tabable">Finalize Dataset</button>
        </section>
        <section id="query-id-container">
            <span class="circle-border">2</span>
            <div>
                <h4 class="dataset-builder-header">Save &amp; Copy Dataset Request ID</h4>
                <div class="soft-border">
                    <p id="save-or-submit-inst" style="border-bottom: 2px lightgrey solid; padding-bottom: 5px;">
                        Save the information included in your cohort by clicking
                        the <b>Save Dataset Request ID</b> button. You can reference this information in
                        the <b>Dataset Manager</b> tool listed under the <b>User Profile</b> tab.
                    </p>
                    <div style="display: flex; justify-content: center;align-items: center;">
                        <b>Dataset Request ID: </b>
                        <input type="text" id="ca-query-id" class="query-id-span QUEUED" value="" readonly="" />
                        <button id="save-dataset-btn" class="btn btn-outline primary hidden tabable" style="margin-left: 10px;">
                            <i class="fa-regular fa-floppy-disk" style="margin-right: 5px;"></i> Save
                        </button>
                        <button id="copy-query-ids-btn" class="btn btn-outline primary hidden tabable" style="margin-left: 10px;">
                            <i class="fa-regular fa-copy" style="margin-right: 5px;"></i> Copy
                        </button>
                    </div>
                    <div id="queryIds"></div>
                    <div id="queryIdSpinner"></div>
                    <div id="dataset-saved" class="hidden">
                        <p class="center"><b>Dataset Request ID saved!</b></p>
                    </div>
                </div>
            </div>
        </section>
        <section id="package-buttons-container" class="package-button-container">
            <button id="copy-pheno-ids-btn" class="btn btn-outline primary hidden tabable">Copy Dataset Variables</button>
        </section>
        <section id="request-buttons-container" class="results-div">
            <span class="circle-border">3</span>
            <div>
                <h4 class="dataset-builder-header">Complete &amp; Submit Access Request Form</h4>
                <div class="soft-border center">
                    <p>
                        By clicking "Request Access" you will be taken to the
                        <b>
                            externally linked  Request Data and Biosamples RedCap form where
                            you can submit your request for data and biosamples.
                        </b>
                    </p>
                    <a class="btn btn-primary tabable" id="request-btn" disabled>
                        {{#if queryButtonLabel}}{{queryButtonLabel}}{{else}}Request Access{{/if}}
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>
